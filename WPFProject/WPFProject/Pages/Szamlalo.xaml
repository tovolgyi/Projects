<Page x:Class="WPFProject.Pages.Szamlalo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="850"
      Title="Szamlalo">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Button Height="50" Width="150"
                HorizontalAlignment="Left" Margin="96,0,0,0" Grid.Row="1"
                x:Name="fel" Click="felGomb"
                Content="Fel"/>

        <Button Height="50" Width="150" 
                HorizontalAlignment="Left" Grid.Row="1"
                x:Name="le" Click="leGomb"
                Content="Le" Margin="360,0,0,0"/>

        <Button Height="50" Width="150" 
                HorizontalAlignment="Left" Margin="605,0,0,0" Grid.Row="1"
                x:Name="nulla" Click="nullaGomb"
                Content="Nulla"/>

        <TextBlock Grid.Row="0" Width="850" Height="300"
                   FontSize="50"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="0"
                   x:Name="szoveg"/>
    </Grid>
</Page>
